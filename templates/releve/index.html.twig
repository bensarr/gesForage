{% extends 'accueil.html.twig' %}

{% block title %}Relevés{% endblock %}

{% block body %}
    <div class="container col-md-6">
        <div class="card bg-transparent">
            <div class="card-header">Compteur:  {{ c.numero }}  Liste des Relevés <a class="btn btn-primary" href="{{ path('liste_factures',{'id': c.id} ) }}"><i class="fa fa-print"></i></a></div>
            <div class="card-body">
                <table class="table table-striped">
                    <tr>
                        <th>Identifiant</th>
                        <th>Date</th>
                        <th>Valeur</th>
                        <th>Editer</th>
                        <th>Supprimer</th>
                    </tr>
                    {% for r in releves %}
                        <tr>
                            <td>{{ r.id }}</td>
                            <td>{{ r.date|date('d/m/y') }}</td>
                            <td>{{ r.valeurEnChiffre }}({{ r.valeurEnLettre }})</td>
                            <td><a class="btn btn-dark" href="{{ path('edit_releve',{'id':r.id} ) }}"><i class="fa fa-edit"></i></a></td>
                            <td><a class="btn btn-danger" href="{{ path('delete_releve',{'id':r.id} ) }}"><i class="fa fa-trash"></i></a></td>
                        </tr>
                    {%endfor%}
                </table>
            </div>
        </div>
    </div>
    <div class="container col-md-6">
        <div class="card">
            <div class="card-header">Formulaire de gestion des Compteurs</div>
            <div class="card-body">
                {{ form_start(form) }}
                {{ form_row(form.date) }}
                {{ form_row(form.valeurEnChiffre) }}
                {{ form_row(form.valeurEnLettre) }}
                {{ form_row(form.facture.pu) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}

{% endblock %}