{% extends 'accueil.html.twig' %}

{% block title %}Compteurs{% endblock %}

{% block body %}
    <div class="container col-md-6">
        <div class="card bg-transparent">
            <div class="card-header">Liste des Compteurs</div>
            <div class="card-body">
                <table class="table table-striped">
                    <tr>
                        <th>Identifiant</th>
                        <th>Numéro</th>
                        <th>Voyant</th>
                        <th>Relevés</th>
                        <th>Editer</th>
                        <th>Supprimer</th>
                    </tr>
                    {% for c in compteurs %}
                        <tr>
                            <td>{{ c.id }}</td>
                            <td>{{ c.numero }}</td>
                            <td><a
                                        {% if c.etat %}
                                            class="btn btn-success"
                                        {% else %}
                                            class="btn btn-danger"
                                        {% endif %}
                                        href="{{ path('action_compteur',{'id':c.id} ) }}"><i {% if c.etat %} class="fa fa-tint"{% else %} class="fa fa-tint-slash"{% endif %}></i></a></td>
                            <td><a class="btn btn-dark" href="{{ path('liste_releve',{'id':c.id} ) }}"><i class="fa fa-cogs"></i></a></td>
                            <td><a class="btn btn-dark" href="{{ path('edit_compteur',{'id':c.id} ) }}"><i class="fa fa-edit"></i></a></td>
                            <td><a class="btn btn-danger" href="{{ path('delete_compteur',{'id':c.id} ) }}"><i class="fa fa-trash"></i></a></td>
                        </tr>
                    {%endfor%}
                </table>
            </div>
        </div>
    </div>
    <div class="container col-md-6">
        <div class="card">
            <div class="card-header">Formulaire de gestion des Compteurs</div>
            <div class="card-body">
                {{ form(form) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}

{% endblock %}